
<%= form_with url: deadline_post_path, method: :post, html: { data: { turbo: false } } do |f| %>
  <div class="flex flex-col justify-start items-center" id="date_fin">
    <div class="film-yourself-block flex flex-col justify-center items-center mt-65 pt-40 pb-40">
      <span class="mt-8">Confirmez la date limite pour la création du film.</span>
      <%= image_tag 'img_placeholder.png', class: 'top-image' %>
        <div class="grey-block flex flex-col justify-center items-center">
          <%= f.date_field :end_date, value: @video.end_date, class: 'mt-8 mb-[48px] date-field' %>
        </div>

    </div>
  </div>
  <div class="video-steps">
    <%= render "videos/shared/back_button" %>
    <div>
    <%= f.submit "Étape suivante", class: "cta" %>
    </div>
  </div>
<% end %>