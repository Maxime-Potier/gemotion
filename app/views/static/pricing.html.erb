<div id="pricing">
    <%= image_tag 'tarification.png', class: ' w-full h-auto object-center tarification-bg' %>

    <%= render "shared/pricing" %>

    <section class="hero-block">
        <h2 class="mb-[40px]">Ajoutez une touche spéciale à votre vidéo</h2>
        <div class="max-w-[1062px] mx-auto flex items-center gap-[61px]">
            <ul class="flex flex-col gap-[20px]">
                <li class="touch">Sélectionnez les chapitres, les musiques, la dédicace de fin,... pour un film personnalisé</li>
                <li class="touch">Invitez des participants</li>
                <li class="touch">Partagez vos photos et/ou vidéos</li>
                <li class="touch">Offrez le film</li>
            </ul>
            <%= image_tag 'gemotion-pricing-touch.png', class: 'max-w-[583px] h-auto object-contain object-center' %>
        </div>
        <%= link_to "Lire la suite", about_path, class: "read-more read-more-pricing black-link mt-8" %>

    </section>


    <%= render "shared/faq" %>

    <%= render "shared/questions" %>

</div>

<style>

#pricing .hero {
  background-image: url('<%= asset_path("gemotion-pricing-hero-bg.png") %>');
  background-position: center 80%;
  background-repeat: no-repeat;
  background-size: cover;
}
.read-more-pricing{
  bottom: 135px !important;
}
.tarification-bg{
  margin-bottom: -180px;
}
.touch {
  display: flex;
  width: 383px;
  height: 124px;
  padding: 26px 24px;
  justify-content: center;
  align-items: center;
  border-radius: 15px;  /* Apply the border-radius here */
  background: var(--White, #FFF);
  color: #000;
  text-align: center;
  font-family: Montserrat, sans-serif;
  font-size: 20px;
  font-style: normal;
  font-weight: 700;
  line-height: 24px; /* 120% */
  position: relative; /* To ensure the pseudo-element is positioned correctly */
  z-index: 1; /* Ensure content is on top of the pseudo-element */
}

.touch::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 15px; /* Apply the same border-radius for the gradient border */
  background: linear-gradient(205.68deg, #C9E1FF 19.49%, #0D6783 60.63%, #163F50 90.92%);
  z-index: -1; /* Ensure it's behind the content */
  padding: 2px; /* Create space for the border */
}
.touch::after {
  content: "";
  position: absolute;
  top: 1px;
  left: 1px;
  width: calc(100% - 2px); /* Adjust for border thickness */
  height: calc(100% - 2px); /* Adjust for border thickness */
  border-radius: 14px; /* Inner border radius (subtract border thickness) */
  background: #fff; /* Matches block background to create the "cut-out" */
  z-index: -1; /* Behind the content, above the gradient */
}

</style>
