<div class='mb-45'>
  <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900 mt-65 mb-45">
    Changez votre mot de passe
  </h2>
  <p class="mt-2 text-center text-sm text-gray-600">
    Sur cette page, vous pouvez modifier votre mot de passe
  </p>
</div>
<div class="flex items-center justify-center mb-150">
  <div class="flex items-center justify-center bg-gray-50 px-4 py-12 sm:px-6 lg:px-8 sign-in-section">
    <div class="w-full max-w-md space-y-8 flex items-center justify-center">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6 flex flex-col items-center justify-center w-full"  }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="mt-2 w-full">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "flex w-full h-[53px] px-[27px] py-[15px] items-start gap-[10px] rounded-[8px] border border-[rgba(0,0,0,0.50)] bg-white text-black font-red-hat-display text-[14px] font-normal leading-[25px] background-color-transparent placeholder-black", placeholder: "Mot de passe*" %>
        </div>

        <div class="mt-2 w-full">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "flex w-full h-[53px] px-[27px] py-[15px] items-start gap-[10px] rounded-[8px] border border-[rgba(0,0,0,0.50)] bg-white text-black font-red-hat-display text-[14px] font-normal leading-[25px] background-color-transparent placeholder-black", placeholder: "Confirmer le mot de passe*" %>
        </div>

        <div class="actions w-full flex items-center justify-center">
          <%= f.submit "Changer mon mot de passe", class: "cta" %>
        </div>

        <hr class='hr-divider-gray mb-2'/>

        <div class='w-full flex items-center justify-between'>
          <a href="<%= new_user_session_path %>" class="cta-transparent">
            Se connecter
          </a>
          <a href="<%= new_user_registration_path %>" class="cta-transparent">
            Cr√©er un compte
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>


