<% content_for :styles do %>
  <%= stylesheet_link_tag 'devise_styles', media: 'all', rel: 'stylesheet' %>
<% end %>
<div class="w-full h-full devise-bg-main-block">
  <div class="w-full h-full devise-bg pt-[72px]">
    <div class='mb-45'>
      <div class="devise-header font-montserrat">
        <span class="gradient-text">Vous avez oublié votre mot de passe ?</span>
      </div>
      <p class="mt-4 text-center p-text-18">
        Si vous avez oublié votre mot de passe, vous pouvez le réinitialiser sur cette page
      </p>
    </div>
    <div class="w-full flex items-center justify-center mt-65">
      <div class="w-60 sign-in-block">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6 flex flex-col items-center justify-center w-full" }) do |f| %>


              <div class="flex flex-col items-center justify-between w-full mt-0">
                <div class='mb-2 w-full'>
                  <%= f.email_field :email, autofocus: true, required: true, class: "flex w-full h-[53px] px-[27px] py-[15px] items-start gap-[10px] rounded-[8px] border border-[rgba(0,0,0,0.50)] bg-white text-black font-red-hat-display text-[14px] font-normal leading-[25px] background-color-transparent placeholder-text-grey", placeholder: "Email*" %>
                </div>
              </div>

              <div class='w-full flex items-center justify-center'>
                <%= f.submit "Envoyez-moi les instructions de réinitialisation du mot de passe", class: "black-link" %>
              </div>

              <hr class='hr-divider-gray mb-2'/>

              <div class='w-full flex items-center justify-center'>
                <a href="<%= new_user_session_path %>" class="transparent-link mr-6">
                  Se connecter
                </a>
                <a href="<%= new_user_registration_path %>" class="transparent-link">
                  Créer un compte
                </a>
              </div>

            <% end %>
      </div>
    </div>
  </div>
</div>
