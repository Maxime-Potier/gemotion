  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  border-radius: 20px;
  background: linear-gradient(205.68deg, #C9E1FF 19.49%, #0D6783 60.63%, #163F50 90.92%);
  z-index: 0;
}

.faq-section::after {
  content: "";
  position: absolute;
  top: 2px; /* Matches border thickness */
  left: 2px; /* Matches border thickness */
  width: calc(100% - 4px); /* Adjust width for border thickness */
  height: calc(100% - 4px); /* Adjust height for border thickness */
  border-radius: 18px; /* Inner radius: subtract border thickness */
  background: white; /* Matches block background */
  z-index: 0; /* Above the gradient but behind content */
}

.faq-section > * {
  position: relative; /* Ensure content stays above pseudo-elements */
  z-index: 1;
}

.faq-section[aria-expanded="true"] {
    background: inherit;
    color: inherit;
}

.faq-section h3 {
    font-size: 20px;
    font-family: "Montserrat";
    font-weight: 700;
    line-height: 24px;
    word-wrap: break-word;
}

.faq-section p {
