    background-image: url('<%= asset_path("gemotion-faq-light.png") %>');
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    position: absolute;
    display: block;
    width: 200px;
    height: 200px;
    right: -120px;
    top: -70px;
}

#faq p {
    margin-bottom: 48px;
}

.faq-section {
    width: 100%;
    height: 100%;
    padding: 48px;
    background: white;
    box-shadow: 4px 4px 20px 5px rgba(12.69, 102.84, 131.31, 0.1);
    border-radius: 20px;
    display: flex;
