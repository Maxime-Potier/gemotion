<header class="py-4 bg-shared-bg sticky top-0 z-50">
  <div class="w-[1280px] mx-auto flex justify-between items-center">
    <%= link_to root_path, data: { turbo: false } do %>
      <%= image_tag 'gemotion-logo-header.svg', alt: 'Gemotion Logo' %>
    <% end %>

    <nav id="primary_menu" class="flex space-x-8">
      <ul class="flex space-x-8">
        <li>
          <%= link_to "Accueil", root_path, class: "text-white text-lg font-montserrat font-bold uppercase leading-7 break-words", data: { turbo: false }  %>
        </li>
        <li>
          <%= link_to "Comment ça marche", about_path, class: "text-white text-lg font-montserrat font-bold uppercase leading-7 break-words", data: { turbo: false }  %>
        </li>
        <li>
          <%= link_to "Tarification", pricing_path, class: "text-white text-lg font-montserrat font-bold uppercase leading-7 break-words", data: { turbo: false }  %>
        </li>
      </ul>
    </nav>

    <nav id="secondary_menu" class="flex space-x-8">
      <ul class="flex items-center gap-2">
        <li>
          <% if user_signed_in? %>
            <%= link_to profile_path do %>
              <%= image_tag "icons/profile.svg", alt: "Profile"%>
            <% end %>
          <% else %>
            <%= link_to new_user_session_path do %>
              <%= image_tag "icons/profile.svg", alt: "Login"%>
            <% end %>
          <% end %>
        </li>
        <li class="flex items-center h-full">
          <%= link_to "Démarrer", start_path(continue: true), class: "text-black text-lg font-montserrat font-bold leading-7 break-words w-full h-full bg-white rounded-[15px] px-[28.32px] pt-[14.43px] pb-[16.78px] flex items-center justify-center" %>
        </li>
        <% if Rails.env.development? %>
          <li class="flex items-center h-full">
            <%= button_to 'Reset',
                          flush_and_reseed_path,
                          method: :post,
                          class: 'p-2 rounded bg-red-500 text-white',
                          data: {
                            confirm: 'Es-tu sûr de vouloir réinitialiser la base de données ?',
                            testid: 'app_reset_button'
                          }
            %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
