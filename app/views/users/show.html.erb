<div class="flex flex-col items-center mb-45">
  <%= render "shared/hello_block"%>

  <%= render "shared/profile_tabs", page_count: 0 %>

  <%= form_for @user, html: { class: 'prof-form-update'} do |f| %>
    <div class="flex flex-row items-center justify-between">
      <div class="form-group w-250">
        <%= f.text_field :first_name, class: "form-input" %>
        <%= f.label :first_name, class: "form-label" %>
      </div>

      <div class="form-group w-250">
        <%= f.text_field :last_name, class: "form-input" %>
        <%= f.label :last_name, class: "form-label" %>
      </div>
    </div>

    <div class="flex flex-row items-center justify-between">
      <div class="form-group w-250">
        <%= f.email_field :email, class: "form-input" %>
        <%= f.label :email, class: "form-label" %>
      </div>

      <div class="form-group w-250">
        <%= f.telephone_field :phone, class: "form-input" %>
        <%= f.label :phone, class: "form-label" %>
      </div>
    </div>

    <div class="flex flex-row items-center justify-center mt-65">
      <%= f.submit "Update", class: "cta-transparent" %>
    </div>

  <% end %>
</div>

<style>
.prof-form-update{
  width:45%;
  margin-top: 60px;
}
.form-group {
  margin-bottom: 20px; /* Space between fields */
}
.w-250{
  width: 250px;
}

.form-input {
  border: none; /* Remove all borders */
  border-bottom: 1px solid #000; /* Add only bottom border */
  width: 100%; /* Full width */
  padding: 10px 0; /* Vertical padding */
  font-size: 16px; /* Font size */
}

.form-label {
  display: block; /* Make label take up full width */
  margin-bottom: 5px; /* Space between label and input */
  font-weight: bold; /* Make the label bold */
}

.btn-update {
  background-color: #4CAF50; /* Green background */
  color: white; /* White text */
  padding: 10px 20px; /* Button padding */
  border: none; /* Remove border */
  cursor: pointer; /* Pointer on hover */
}

.btn-update:hover {
  background-color: #45a049; /* Darker green on hover */
}
</style>