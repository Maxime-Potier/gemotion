<div class="flex flex-col items-center mb-45">
  <%= render "shared/hello_block"%>

  <%= render "shared/profile_tabs", page_count: 0 %>

  <div class="profile-frame mt-8">
    <%= form_for @user, html: { class: 'prof-form-update w-full'} do |f| %>
      <div class="flex flex-row items-center justify-between">
        <div class="form-group w-250">
          <%= f.text_field :first_name, class: "form-input" %>
          <%= f.label "name", class: "form-label" %>
        </div>

        <div class="form-group w-250">
          <%= f.text_field :last_name, class: "form-input" %>
          <%= f.label "surname", class: "form-label" %>
        </div>
      </div>

      <div class="flex flex-row items-center justify-between">
        <div class="form-group w-250">
          <%= f.email_field :email, class: "form-input" %>
          <%= f.label :email, class: "form-label" %>
        </div>

        <div class="form-group w-250">
          <%= f.telephone_field :phone, class: "form-input" %>
          <%= f.label "phone number", class: "form-label" %>
        </div>
      </div>

      <div class="flex flex-row items-center justify-center mt-8">
        <%= f.submit "Edit", class: "transparent-link" %>
      </div>

    <% end %>
  </div>
</div>

<style>
.prof-form-update{
  /* width:45%;
  margin-top: 60px; */
}
.form-group {
  margin-bottom: 20px; /* Space between fields */
}
.w-250{
  width: 250px;
}

.form-input {
  font-family: Montserrat;
  font-size: 20px;
  font-weight: 700;
  line-height: 24px;
  text-align: left;
  text-underline-position: from-font;
  text-decoration-skip-ink: none;
  border: none; /* Remove all borders */
  border-bottom: 1px solid rgba(32, 31, 31, 0.5); /* Add only bottom border */
  width: 100%; /* Full width */
  padding: 10px 0; /* Vertical padding */
}

.form-label {
  font-family: Red Hat Display;
  font-size: 16px;
  font-weight: 400;
  line-height: 25px;
  text-align: left;
  text-underline-position: from-font;
  text-decoration-skip-ink: none;
  color: rgba(32, 31, 31, 0.5);
  display: block; /* Make label take up full width */
}

.btn-update {
  background-color: #4CAF50; /* Green background */
  color: white; /* White text */
  padding: 10px 20px; /* Button padding */
  border: none; /* Remove border */
  cursor: pointer; /* Pointer on hover */
}

.btn-update:hover {
  background-color: #45a049; /* Darker green on hover */
}
</style>